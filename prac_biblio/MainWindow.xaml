<Window x:Class="prac_biblio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text File App" Height="350" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Введите текст для записи в файл:" />
            <TextBox x:Name="textInput" Margin="0 5" />
            <Button Content="Записать в файл" Click="WriteToFileButton_Click" />

            <TextBlock Text="Введите путь к файлу для чтения:" Margin="0 20 0 10" />
            <TextBox x:Name="filePathInput" Margin="0 0 0 5" />
            <Button Content="Прочитать файл" Click="ReadFromFileButton_Click" />

            <TextBlock x:Name="fileContentOutput" Margin="0 20" />
        </StackPanel>
    </Grid>
</Window>
